# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/ai_recruitment
MONGODB_DB_NAME=ai_recruitment

# Connection options
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=5
MONGODB_CONNECTION_TIMEOUT=30000

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/v1
VITE_INTERVIEW_API=http://localhost:3003/v1
VITE_WEBSOCKET_URL=ws://localhost:3004/ws

# Application Configuration
VITE_APP_NAME=AI Recruitment Platform
VITE_APP_VERSION=1.0.0
VITE_NODE_ENV=development
# ===========================================
# AI Recruitment Platform - Environment Variables
# ===========================================

# Copy this file to .env and update the values
# DO NOT commit the actual .env file to version control

# ===========================================
# API BASE URLs
# ===========================================

# Main Dashboard API
VITE_API_BASE_URL=http://localhost:3001/api

# Module 1: Resume Parser API
VITE_RESUME_PARSER_API=http://localhost:3002/v1

# Module 2: Live AI Interview API  
VITE_INTERVIEW_API=http://localhost:3003/v1

# Module 3: Avatar Service API
VITE_AVATAR_API=http://localhost:3004/api

# ===========================================
# AUTHENTICATION
# ===========================================

# JWT Configuration
VITE_JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
VITE_JWT_EXPIRES_IN=24h
VITE_JWT_REFRESH_EXPIRES_IN=7d

# Authentication Provider
VITE_AUTH_PROVIDER=local

# ===========================================
# AI PROVIDERS
# ===========================================

# OpenAI Configuration
VITE_OPENAI_API_KEY=sk-your-openai-api-key
VITE_OPENAI_MODEL=gpt-4
VITE_OPENAI_BASE_URL=https://api.openai.com/v1

# OpenRouter Configuration (Alternative)
VITE_OPENROUTER_API_KEY=sk-or-your-openrouter-api-key
VITE_OPENROUTER_MODEL=anthropic/claude-3-sonnet

# Google Gemini Configuration
VITE_GEMINI_API_KEY=your-gemini-api-key
VITE_GEMINI_MODEL=gemini-pro

# Default AI Provider (openai | openrouter | gemini)
VITE_DEFAULT_AI_PROVIDER=openai

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================

# Maximum file sizes (in bytes)
VITE_MAX_RESUME_SIZE=10485760
VITE_MAX_AVATAR_SIZE=2097152
VITE_MAX_FILE_SIZE=52428800

# Allowed file types
VITE_ALLOWED_RESUME_TYPES=pdf,docx,txt
VITE_ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
VITE_ALLOWED_AVATAR_TYPES=jpg,jpeg,png

# File upload timeout (in milliseconds)
VITE_UPLOAD_TIMEOUT=300000

# ===========================================
# INTERVIEW CONFIGURATION
# ===========================================

# Default interview settings
VITE_DEFAULT_INTERVIEW_DURATION=45
VITE_DEFAULT_INTERVIEW_MODE=technical
VITE_DEFAULT_DIFFICULTY_LEVEL=mid

# Audio/Video settings
VITE_AUDIO_SAMPLE_RATE=44100
VITE_AUDIO_CHANNELS=1
VITE_VIDEO_QUALITY=high
VITE_MAX_RECORDING_DURATION=300000

# WebRTC Configuration
VITE_STUN_SERVER=stun:stun.l.google.com:19302
VITE_TURN_SERVER=turn:your-turn-server.com:3478
VITE_TURN_USERNAME=your-turn-username
VITE_TURN_CREDENTIAL=your-turn-password

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Database URLs
VITE_DATABASE_URL=postgresql://username:password@localhost:5432/recruitment_db
VITE_REDIS_URL=redis://localhost:6379

# Database connection settings
VITE_DB_POOL_SIZE=10
VITE_DB_TIMEOUT=30000

# ===========================================
# STORAGE CONFIGURATION
# ===========================================

# AWS S3 Configuration
VITE_AWS_S3_BUCKET=recruitment-platform-files
VITE_AWS_ACCESS_KEY_ID=your-aws-access-key
VITE_AWS_SECRET_ACCESS_KEY=your-aws-secret-key
VITE_AWS_REGION=us-east-1
VITE_AWS_S3_ENDPOINT=https://s3.amazonaws.com

# Alternative: Local storage
VITE_STORAGE_TYPE=local
VITE_LOCAL_STORAGE_PATH=./uploads

# ===========================================
# EMAIL CONFIGURATION
# ===========================================

# SMTP Settings
VITE_SMTP_HOST=smtp.gmail.com
VITE_SMTP_PORT=587
VITE_SMTP_SECURE=false
VITE_SMTP_USER=your-email@gmail.com
VITE_SMTP_PASS=your-app-password

# Email templates
VITE_EMAIL_FROM=noreply@recruitment-platform.com
VITE_EMAIL_FROM_NAME=AI Recruitment Platform

# ===========================================
# NOTIFICATION CONFIGURATION
# ===========================================

# Push notifications
VITE_VAPID_PUBLIC_KEY=your-vapid-public-key
VITE_VAPID_PRIVATE_KEY=your-vapid-private-key
VITE_VAPID_EMAIL=your-email@example.com

# SMS notifications (Twilio)
VITE_TWILIO_ACCOUNT_SID=your-twilio-account-sid
VITE_TWILIO_AUTH_TOKEN=your-twilio-auth-token
VITE_TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# ANALYTICS & MONITORING
# ===========================================

# Google Analytics
VITE_GA_TRACKING_ID=GA-XXXXXXXXX

# Sentry Error Tracking
VITE_SENTRY_DSN=your-sentry-dsn
VITE_SENTRY_ENVIRONMENT=development

# Application monitoring
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# CORS settings
VITE_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
VITE_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
VITE_ALLOWED_HEADERS=Content-Type,Authorization

# Rate limiting
VITE_RATE_LIMIT_WINDOW=900000
VITE_RATE_LIMIT_MAX_REQUESTS=100

# Session configuration
VITE_SESSION_SECRET=your-session-secret-key
VITE_SESSION_TIMEOUT=1800000

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Development mode
VITE_DEV_MODE=true
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug

# Hot reload
VITE_HMR_OVERLAY=true
VITE_HMR_TIMEOUT=2000

# Mock data
VITE_USE_MOCK_DATA=false
VITE_MOCK_API_DELAY=1000

# ===========================================
# PRODUCTION CONFIGURATION
# ===========================================

# Production mode
VITE_NODE_ENV=production
VITE_BUILD_COMPRESS=true

# Cache settings
VITE_ENABLE_CACHE=true
VITE_CACHE_DURATION=3600000

# CDN Configuration
VITE_CDN_URL=https://cdn.your-domain.com
VITE_STATIC_URL=/static/

# ===========================================
# FEATURE FLAGS
# ===========================================

# Feature toggles
VITE_ENABLE_RESUME_PARSER=true
VITE_ENABLE_LIVE_INTERVIEW=true
VITE_ENABLE_AI_AVATAR=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true

# Beta features
VITE_ENABLE_BETA_FEATURES=false
VITE_ENABLE_EXPERIMENTAL_AI=false

# ===========================================
# THIRD-PARTY INTEGRATIONS
# ===========================================

# LinkedIn Integration
VITE_LINKEDIN_CLIENT_ID=your-linkedin-client-id
VITE_LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Google OAuth
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_GOOGLE_CLIENT_SECRET=your-google-client-secret

# Slack Integration
VITE_SLACK_WEBHOOK_URL=your-slack-webhook-url
VITE_SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================

# API timeouts
VITE_API_TIMEOUT=10000
VITE_UPLOAD_TIMEOUT=300000
VITE_INTERVIEW_TIMEOUT=3600000

# Pagination
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# Debounce settings
VITE_SEARCH_DEBOUNCE=300
VITE_AUTOSAVE_DEBOUNCE=2000

# ===========================================
# LOCALIZATION
# ===========================================

# Default language
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ja,zh

# Date/Time formatting
VITE_DEFAULT_TIMEZONE=America/New_York
VITE_DATE_FORMAT=MM/DD/YYYY
VITE_TIME_FORMAT=12h

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log levels
VITE_LOG_LEVEL=info
VITE_ENABLE_CONSOLE_LOGS=true
VITE_ENABLE_FILE_LOGS=false

# Log rotation
VITE_MAX_LOG_SIZE=10485760
VITE_MAX_LOG_FILES=5

# ===========================================
# TESTING CONFIGURATION
# ===========================================

# Test environment
VITE_TEST_API_URL=http://localhost:3001/test
VITE_ENABLE_TEST_MOCKS=true

# Coverage reporting
VITE_COVERAGE_THRESHOLD=80
VITE_ENABLE_COVERAGE_REPORTS=true


